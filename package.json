{
  "name": "budget-claims-system",
  "version": "1.4.42",
  "description": "A system to manage vehicle claims.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:insecure": "cross-env DEBUG=app:import NODE_ENV=development nodemon server.js",
    "test": "cross-env NODE_ENV=test jest --coverage --detectOpenHandles --forceExit",
    "test:watch": "jest --watchAll",
    "test:ci": "jest --ci --coverage --detectOpenHandles --forceExit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "docs": "jsdoc -c jsdoc.conf.json",
    "prepare": "husky install",
    "test:unit": "jest --testMatch='**/*.unit.test.js'",
    "test:integration": "jest --testMatch='**/*.integration.test.js'",
    "test:coverage": "jest --coverage --coverageReporters='text-summary'",
    "test:clear": "jest --clearCache",
    "migrate:status": "node migrations/status-migration.js"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.3",
    "cache-manager": "^5.2.4",
    "cache-manager-redis-store": "^3.0.1",
    "connect-flash": "^0.1.1",
    "connect-mongo": "^5.1.0",
    "cors": "^2.8.5",
    "csv-express": "^1.2.2",
    "csv-parse": "^5.6.0",
    "debug": "^4.4.0",
    "ejs": "^3.1.10",
    "exceljs": "^4.4.0",
    "express-fileupload": "^1.5.0",
    "express-session": "^1.18.0",
    "extract-zip": "^2.0.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "method-override": "^3.0.0",
    "mongoose": "^8.7.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.16",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pdfkit": "^0.15.0",
    "pino": "^9.2.0",
    "pino-http": "^10.3.0",
    "qrcode": "^1.5.4",
    "redis": "^4.7.0",
    "speakeasy": "^2.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-prettier": "^5.1.3",
    "express": "^4.21.2",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.2",
    "lint-staged": "^15.2.2",
    "mongodb-memory-server": "^9.5.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "rewire": "^7.0.0",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
