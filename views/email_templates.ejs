<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"> <!-- Set the character encoding for the document -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!-- Ensure proper rendering and touch zooming on mobile devices -->
    <title>Email Templates - Budget Claims System</title> <!-- Title of the document -->
    <link rel="stylesheet" href="/css/styles.css"> <!-- Link to external CSS file for styling -->
</head>
<header>
    <!-- Logo and navigation -->
    <img src="/images/Budget_logo.svg" alt="Budget Logo" class="logo"> <!-- Company logo -->
    <h1>Budget Claims System</h1> <!-- Main heading -->
    <nav>
        <ul>
            <li><a href="/dashboard">Dashboard</a></li> <!-- Link to Dashboard -->
            <li class="Claims">
                <a href="javascript:void(0)" class="dropbtn">Claims</a> <!-- Dropdown trigger -->
                <div class="dropdown-content">
                    <a href="/claims/search">Search Claims</a> <!-- Link to Search Claims -->
                    <a href="/claims/add">Add Claim</a> <!-- Link to Add Claim -->
                </div>
            </li>
            <li><a href="/reports">Reports</a></li> <!-- Link to Reports -->
            <li class="Settings">
                <a href="javascript:void(0)" class="dropbtn">Settings</a> <!-- Dropdown trigger -->
                <div class="dropdown-content">
                    <a href="/user-management">User Management</a> <!-- Link to User Management -->
                    <a href="/email-templates">Email Templates</a> <!-- Link to Email Templates -->
                </div>
            </li>
            <li><a href="/help">Help</a></li> <!-- Link to Help -->
            <li><a href="/logout">Logout</a></li> <!-- Link to Logout -->
        </ul>
    </nav>
</header>
    <main>
        <h2>Email Templates</h2> <!-- Section heading -->

        <!-- Section for adding a new email template -->
        <section>
            <h3>Add New Template</h3> <!-- Subheading for adding a new template -->
            <form action="/email-templates/add" method="post"> <!-- Form to add a new template -->
                <div>
                    <label for="name">Template Name:</label> <!-- Label for template name input -->
                    <input type="text" id="name" name="name" required> <!-- Input for template name -->
                </div>
                <div>
                    <label for="subject">Subject:</label> <!-- Label for subject input -->
                    <input type="text" id="subject" name="subject" required> <!-- Input for subject -->
                </div>
                <div>
                    <label for="body">Body:</label> <!-- Label for body textarea -->
                    <textarea id="body" name="body" required></textarea> <!-- Textarea for body content -->
                </div>
                <button type="submit">Add Template</button> <!-- Button to submit the form -->
            </form>
        </section>

        <!-- Section for listing existing email templates -->
        <section>
            <h3>Existing Templates</h3> <!-- Subheading for existing templates section -->
            <ul>
                <% emailTemplates.forEach(template => { %> <!-- Iterate over email templates -->
                    <li>
                        <p><strong>Name:</strong> <%= template.name %></p> <!-- Display template name -->
                        <p><strong>Subject:</strong> <%= template.subject %></p> <!-- Display template subject -->
                        <p><strong>Body:</strong> <%= template.body %></p> <!-- Display template body -->
                        <a href="/email-templates/<%= template._id %>/edit" class="edit-btn">Edit</a> <!-- Link to edit the template -->
                        <form action="/email-templates/<%= template._id %>/delete" method="post"> <!-- Form to delete the template -->
                            <button type="submit">Delete</button> <!-- Button to delete the template -->
                        </form>
                    </li>
                <% }) %>
            </ul>
        </section>
    </main>
</body>
</html>
