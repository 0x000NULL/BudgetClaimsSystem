<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management - Budget Claims System</title>
    <link rel="stylesheet" href="/css/styles.css"><!-- Link to external CSS for styling -->
    <style>
        /* Inline styles for better edit button appearance */
        .edit-btn {
            display: inline-block;
            padding: 8px 12px;
            margin: 5px 0;
            background-color: #007bff;
            color: white;
            text-align: center;
            text-decoration: none;
            border-radius: 4px;
        }

        .edit-btn:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <header>
        <!-- Budget logo and navigation -->
        <img src="/images/Budget_logo.svg" alt="Budget Logo" class="logo">
        <h1>Budget Claims System</h1>
        <nav>
            <ul>
                <li><a href="/dashboard">Dashboard</a></li>
                <li><a href="/claims/search">Search Claims</a></li>
                <li><a href="/claims/add">Add Claim</a></li>
                <li><a href="/reports">Reports</a></li>
                <li><a href="/user-management">User Management</a></li>
                <li><a href="/help">Help</a></li>
                <li><a href="/logout">Logout</a></li>
            </ul>
        </nav>
    </header>
    <main>
        <h2>User Management</h2>

        <!-- Section for adding a new user -->
        <section>
            <h3>Add New User</h3>
            <form action="/users/register" method="post">
                <div>
                    <label for="name">Name:</label>
                    <input type="text" id="name" name="name" required>
                </div>
                <div>
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" required>
                </div>
                <div>
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" required>
                </div>
                <div>
                    <label for="role">Role:</label>
                    <select id="role" name="role" required>
                        <option value="admin">Admin</option>
                        <option value="manager">Manager</option>
                        <option value="employee">Employee</option>
                    </select>
                </div>
                <button type="submit">Add User</button>
            </form>
        </section>

        <!-- Section for listing existing users -->
        <section>
            <h3>Existing Users</h3>
            <ul>
                <% users.forEach(user => { %>
                    <li>
                        <p><strong>Name:</strong> <%= user.name %></p>
                        <p><strong>Email:</strong> <%= user.email %></p>
                        <p><strong>Role:</strong> <%= user.role %></p>
                        <a href="/users/<%= user._id %>/edit" class="edit-btn">Edit</a>
                    </li>
                <% }) %>
            </ul>
        </section>
    </main>
</body>
</html>
