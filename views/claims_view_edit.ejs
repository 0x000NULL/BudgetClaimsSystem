<%- include('layout', { title: 'Dashboard - Budget Claims System' }) %>
    <main>
        <!-- Form to search for claims -->
        <form action="/claims/search" method="get">
            <div>
                <!-- Input field for MVA -->
                <label for="mva">MVA:</label>
                <input type="text" id="mva" name="mva">
            </div>
            <div>
                <!-- Input field for Customer Name -->
                <label for="customerName">Customer Name:</label>
                <input type="text" id="customerName" name="customerName">
            </div>
            <button type="submit">Search</button><!-- Submit button for the form -->
        </form>
        <% if (claims) { %>
            <!-- Display search results if claims are found -->
            <h2>Search Results</h2>
            <ul>
                <% claims.forEach(claim => { %>
                    <!-- Link to view/edit individual claim -->
                    <li><a href="/claims/<%= claim._id %>"><%= claim.mva %> - <%= claim.customerName %></a></li>
                <% }) %>
            </ul>
        <% } %>
    </main>

