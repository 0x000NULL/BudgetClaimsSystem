<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Claims - Budget Claims System</title>
    <link rel="stylesheet" href="/css/styles.css"><!-- Link to external CSS for styling -->
</head>
<body>
    <header>
        <!-- Budget logo and navigation -->
        <img src="/images/Budget_logo.svg" alt="Budget Logo" class="logo">
        <h1>Budget Claims System</h1>
        <nav>
            <ul>
                <li><a href="/dashboard">Dashboard</a></li>
                <li><a href="/claims/search">Search Claims</a></li>
                <li><a href="/claims/add">Add Claim</a></li>
                <li><a href="/reports">Reports</a></li>
                <li><a href="/user-management">User Management</a></li>
                <li><a href="/help">Help</a></li>
                <li><a href="/logout">Logout</a></li>
            </ul>
        </nav>
    </header>
    <main>
        <div class="container">
            <h2>Search Claims</h2>
            <form action="/claims/search" method="get">
                <div>
                    <label for="mva">MVA:</label>
                    <input type="text" id="mva" name="mva">
                </div>
                <div>
                    <label for="customerName">Renter Name:</label>
                    <input type="text" id="customerName" name="customerName">
                </div>
                <div>
                    <label for="raNumber">RA Number:</label>
                    <input type="text" id="raNumber" name="raNumber">
                </div>
                <div>
                <label for="damageType">Damage Type:</label>
                <select id="damageType" name="damageType">
                    <option value="">Select Damage Type</option>
                    <option value="Heavy hit">Heavy hit</option>
                    <option value="Light hit">Light hit</option>
                    <option value="Mystery">Mystery</option>
                </select>
            </div>
            
                <div>
                    <label for="dateOfLoss">Date of Loss:</label>
                    <input type="date" id="dateOfLoss" name="dateOfLoss">
                </div>
                <div>
                    <label for="startDate">Start Date:</label>
                    <input type="date" id="startDate" name="startDate">
                </div>
                <div>
                    <label for="endDate">End Date:</label>
                    <input type="date" id="endDate" name="endDate">
                </div>
                <button type="submit">Search</button>
            </form>
            <% if (claims && claims.length > 0) { %>
                <h3>Search Results</h3>
                <ul>
                    <% claims.forEach(claim => { %>
                        <li>
                            <p><strong>MVA:</strong> <%= claim.mva %></p>
                            <p><strong>Renter Name:</strong> <%= claim.customerName %></p>
                            <p><strong>RA Number:</strong> <%= claim.raNumber %></p>
                            <p><strong>Date of Loss:</strong> <%= claim.dateOfLoss ? new Date(claim.dateOfLoss).toLocaleDateString() : '' %></p>
                            <p><strong>Status:</strong> <%= claim.status %></p>
                            <a href="/claims/<%= claim._id %>">View Claim</a>
                        </li>
                    <% }) %>
                </ul>
            <% } else { %>
                <p>No claims found matching the search criteria.</p>
            <% } %>
        </div>
    </main>
</body>
</html>
