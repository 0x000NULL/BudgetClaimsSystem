<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"> <!-- Set the character encoding for the document -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!-- Ensure proper rendering and touch zooming on mobile devices -->
    <title>Reports - Budget Claims System</title> <!-- Title of the document -->
    <link rel="stylesheet" href="/css/styles.css"> <!-- Link to the external CSS file for styling -->
    <link rel="stylesheet" href="/js/bootstrap-datepicker.min.css"> <!-- Bootstrap Datepicker CSS -->
</head>
<body>
    <header>
        <!-- Logo and navigation -->
        <img src="/images/Budget_logo.svg" alt="Budget Logo" class="logo"> <!-- Company logo -->
        <h1>Budget Claims System</h1> <!-- Main heading -->
        <nav>
            <ul>
                <li><a href="/dashboard">Dashboard</a></li> <!-- Link to Dashboard -->
                <li class="Claims">
                    <a href="javascript:void(0)" class="dropbtn">Claims</a> <!-- Dropdown trigger -->
                    <div class="dropdown-content">
                        <a href="/claims/search">Search Claims</a> <!-- Link to Search Claims -->
                        <a href="/claims/add">Add Claim</a> <!-- Link to Add Claim -->
                    </div>
                </li>
                <li><a href="/reports">Reports</a></li> <!-- Link to Reports -->
                <li class="Settings">
                    <a href="javascript:void(0)" class="dropbtn">Settings</a> <!-- Dropdown trigger -->
                    <div class="dropdown-content">
                        <a href="/general-settings">General Settings</a> <!-- Link to General Settings -->
                        <a href="/user-management">User Management</a> <!-- Link to User Management -->
                        <a href="/email-templates">Email Templates</a> <!-- Link to Email Templates -->
                    </div>
                </li>
                <li><a href="/help">Help</a></li> <!-- Link to Help -->
                <li><a href="/logout">Logout</a></li> <!-- Link to Logout -->
            </ul>
        </nav>
    </header>
    <main>
        <h2>Generate Report</h2> <!-- Section heading -->

        <!-- Form to generate reports -->
        <form action="/reports/generate" method="POST">
            <label for="format">Select Format:</label> <!-- Label for format selection -->
            <select name="format" id="format" required> <!-- Dropdown to select report format -->
                <option value="csv">CSV</option>
                <option value="excel">Excel</option>
                <option value="pdf">PDF</option>
            </select>
            <br><br>
            <label for="startDate">Select Start Date:</label> <!-- Label for start date selection -->
            <input type="text" id="startDate" name="startDate" class="datepicker" required> <!-- Input for start date with datepicker class -->
            <br><br>
            <label for="endDate">Select End Date:</label> <!-- Label for end date selection -->
            <input type="text" id="endDate" name="endDate" class="datepicker" required> <!-- Input for end date with datepicker class -->
            <br><br>
            <label for="allTime">
                <input type="checkbox" id="allTime" name="allTime"> Output All Time <!-- Checkbox for outputting all time data -->
            </label>
            <br><br>
            <button type="submit">Generate Report</button> <!-- Button to submit the form -->
        </form>
    </main>
    <script src="/js/jquery-3.6.0.min.js"></script> <!-- jQuery for easier DOM manipulation -->
    <script src="/js/bootstrap-datepicker.min.js"></script> <!-- Bootstrap Datepicker JS -->
    <script>
        $(function() {
            // Initialize the datepicker
            $('.datepicker').datepicker({
                format: 'mm/dd/yyyy', // Date format
                autoclose: true, // Automatically close the datepicker after selection
                todayHighlight: true // Highlight today's date
            });

            // Disable the date range inputs if "Output All Time" is checked
            $('#allTime').on('change', function() {
                if ($(this).is(':checked')) {
                    $('.datepicker').attr('disabled', 'disabled').val(''); // Disable date inputs and clear their values
                } else {
                    $('.datepicker').removeAttr('disabled'); // Enable date inputs
                }
            });
        });
    </script>
</body>
</html>
