<%- include('layout', { title: 'Dashboard - Budget Claims System' }) %>
    <main>
        <form action="/claims/search" method="GET">
            <div>
                <label for="mva">MVA:</label>
                <input type="text" id="mva" name="mva">
            </div>
            <div>
                <label for="customerName">Customer Name:</label>
                <input type="text" id="customerName" name="customerName">
            </div>
            <div>
                <label for="status">Status:</label>
                <select id="status" name="status">
                    <option value="">Any</option>
                    <option value="Open">Open</option>
                    <option value="Closed">Closed</option>
                </select>
            </div>
            <div>
                <label for="startDate">Start Date:</label>
                <input type="date" id="startDate" name="startDate">
            </div>
            <div>
                <label for="endDate">End Date:</label>
                <input type="date" id="endDate" name="endDate">
            </div>
            <button type="submit">Search</button><!-- Submit button for the form -->
        </form>
        <ul>
            <% claims.forEach(claim => { %>
                <li>
                    <h3>MVA: <%= claim.mva %></h3>
                    <p>Customer Name: <%= claim.customerName %></p>
                    <p>Description: <%= claim.description %></p>
                    <p>Status: <%= claim.status %></p>
                    <p>Date: <%= new Date(claim.date).toLocaleDateString() %></p>
                </li>
            <% }) %>
        </ul>
    </main>