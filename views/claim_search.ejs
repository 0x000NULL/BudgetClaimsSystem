<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Claims - Budget Claims System</title>
    <link rel="stylesheet" href="/css/styles.css"><!-- Link to the external CSS file for styling -->
</head>
<body>
    <header>
        <!-- Budget logo and navigation -->
        <img src="/images/Budget_logo.svg" alt="Budget Logo" class="logo">
        <h1>Search Claims</h1>
        <nav>
            <ul>
                <li><a href="/dashboard">Dashboard</a></li>
                <li><a href="/claims/search">Search Claims</a></li>
                <li><a href="/claims">Manage Claims</a></li>
                <li><a href="/reports">Reports</a></li>
                <li><a href="/user-management">User Management</a></li>
                <li><a href="/logout">Logout</a></li>
            </ul>
        </nav>
    </header>
    <main>
        <form action="/claims/search" method="GET">
            <div>
                <label for="mva">MVA:</label>
                <input type="text" id="mva" name="mva">
            </div>
            <div>
                <label for="customerName">Customer Name:</label>
                <input type="text" id="customerName" name="customerName">
            </div>
            <div>
                <label for="status">Status:</label>
                <select id="status" name="status">
                    <option value="">Any</option>
                    <option value="Open">Open</option>
                    <option value="Closed">Closed</option>
                </select>
            </div>
            <div>
                <label for="startDate">Start Date:</label>
                <input type="date" id="startDate" name="startDate">
            </div>
            <div>
                <label for="endDate">End Date:</label>
                <input type="date" id="endDate" name="endDate">
            </div>
            <button type="submit">Search</button><!-- Submit button for the form -->
        </form>
        <ul>
            <% claims.forEach(claim => { %>
                <li>
                    <h3>MVA: <%= claim.mva %></h3>
                    <p>Customer Name: <%= claim.customerName %></p>
                    <p>Description: <%= claim.description %></p>
                    <p>Status: <%= claim.status %></p>
                    <p>Date: <%= new Date(claim.date).toLocaleDateString() %></p>
                </li>
            <% }) %>
        </ul>
    </main>
</body>
</html>
