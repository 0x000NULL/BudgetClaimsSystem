<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        .btn {
            display: inline-block;
            padding: 8px 12px;
            margin: 5px;
            background-color: #007bff;
            color: white;
            text-align: center;
            text-decoration: none;
            border-radius: 4px;
        }

        .btn:hover {
            background-color: #0056b3;
        }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <header>
        <img src="/images/Budget_logo.svg" alt="Budget Logo" class="logo">
        <h1>Budget Claims System</h1>
        <nav>
            <ul>
                <li><a href="/dashboard">Dashboard</a></li>
                <li><a href="/claims/search">Search Claims</a></li>
                <li><a href="/claims/add">Add Claim</a></li>
                <li><a href="/reports">Reports</a></li>
                <li><a href="/user-management">User Management</a></li>
                <li><a href="/email-templates">Email Templates</a></li>
                <li><a href="/logout">Logout</a></li>
            </ul>
        </nav>
    </header>
    <main>
        <h2>Dashboard Analytics</h2>
        <div class="stats">
            <p>Total Claims: <%= totalClaims %></p>
            <p>Open Claims: <%= openClaims %></p>
            <p>In Progress Claims: <%= inProgressClaims %></p>
            <p>Closed Claims: <%= closedClaims %></p>
        </div>
        <div class="chart-container">
            <canvas id="claimsStatusChart"></canvas>
        </div>
        <div class="quick-actions">
            <button class="btn" onclick="location.href='/claims/add'">Add New Claim</button>
            <button class="btn" onclick="location.href='/reports'">Generate Reports</button>
        </div>
    </main>
    <script>
        // Chart for Claims Status
        const ctxStatus = document.getElementById('claimsStatusChart').getContext('2d');
        const claimsStatusChart = new Chart(ctxStatus, {
            type: 'bar',
            data: {
                labels: ['Open', 'In Progress', 'Closed'],
                datasets: [{
                    label: 'Claims Status',
                    data: [<%= openClaims %>, <%= inProgressClaims %>, <%= closedClaims %>],
                    backgroundColor: ['#007bff', '#ffc107', '#28a745']
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });
    </script>
</body>
</html>
