<%- include('layout', { title: 'Dashboard - Budget Claims System' }) %>
    <main>
        <h2>Claims List</h2>
        <table>
            <thead>
                <tr>
                    <th>MVA</th>
                    <th>Customer Name</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                <% claims.forEach(claim => { %>
                    <tr>
                        <td><%= claim.mva %></td>
                        <td><%= claim.customerName %></td>
                        <td><%= claim.description %></td>
                        <td><%= claim.status %></td>
                        <td><%= new Date(claim.date).toLocaleDateString() %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </main>