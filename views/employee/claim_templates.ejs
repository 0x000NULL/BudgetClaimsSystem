<%- include('../partials/header') %>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Claim Templates</h1>
        <a href="/claim-templates/new" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create New Template
        </a>
    </div>

    <% if (Object.keys(categorizedTemplates).length === 0) { %>
        <div class="alert alert-info">
            <p>No claim templates found. Create your first template to get started!</p>
            <p>Claim templates allow you to:</p>
            <ul>
                <li>Save time by pre-filling common claim information</li>
                <li>Ensure consistency across similar claims</li>
                <li>Share templates with your team</li>
                <li>Standardize required fields for specific claim types</li>
            </ul>
        </div>
    <% } else { %>
        <div class="row">
            <div class="col-md-3">
                <div class="list-group mb-4" id="template-categories" role="tablist">
                    <% Object.keys(categorizedTemplates).forEach((category, index) => { %>
                        <a class="list-group-item list-group-item-action <%= index === 0 ? 'active' : '' %>" 
                           id="category-<%= category.replace(/\s+/g, '-').toLowerCase() %>-tab" 
                           data-toggle="list" 
                           href="#category-<%= category.replace(/\s+/g, '-').toLowerCase() %>" 
                           role="tab">
                            <%= category %> (<%= categorizedTemplates[category].length %>)
                        </a>
                    <% }); %>
                </div>
            </div>
            
            <div class="col-md-9">
                <div class="tab-content">
                    <% Object.keys(categorizedTemplates).forEach((category, index) => { %>
                        <div class="tab-pane fade <%= index === 0 ? 'show active' : '' %>" 
                             id="category-<%= category.replace(/\s+/g, '-').toLowerCase() %>" 
                             role="tabpanel">
                            
                            <div class="card">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0"><%= category %></h5>
                                </div>
                                <div class="card-body p-0">
                                    <div class="list-group list-group-flush">
                                        <% categorizedTemplates[category].forEach(template => { %>
                                            <div class="list-group-item">
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <div>
                                                        <h5 class="mb-1">
                                                            <%= template.name %>
                                                            <% if (template.isShared) { %>
                                                                <span class="badge badge-info">Shared</span>
                                                            <% } %>
                                                            <% if (template.requiresApproval) { %>
                                                                <% if (template.approvalStatus === 'approved') { %>
                                                                    <span class="badge badge-success">Approved</span>
                                                                <% } else if (template.approvalStatus === 'rejected') { %>
                                                                    <span class="badge badge-danger">Rejected</span>
                                                                <% } else { %>
                                                                    <span class="badge badge-warning">Pending Approval</span>
                                                                <% } %>
                                                            <% } %>
                                                        </h5>
                                                        <p class="mb-1 text-muted">
                                                            <small>
                                                                Created by: <%= template.createdBy.name %> | 
                                                                Version: <%= template.version %> | 
                                                                Last updated: <%= new Date(template.updatedAt).toLocaleDateString() %>
                                                            </small>
                                                        </p>
                                                        <p class="mb-0"><%= template.description %></p>
                                                    </div>
                                                    <div class="btn-group">
                                                        <form action="/claim-templates/<%= template._id %>/use" method="POST" class="d-inline">
                                                            <button type="submit" class="btn btn-sm btn-success" 
                                                                <%= (template.requiresApproval && template.approvalStatus !== 'approved') ? 'disabled' : '' %>>
                                                                <i class="fas fa-play"></i> Use
                                                            </button>
                                                        </form>
                                                        <a href="/claim-templates/<%= template._id %>" class="btn btn-sm btn-info">
                                                            <i class="fas fa-eye"></i> View
                                                        </a>
                                                        <% if (template.createdBy._id.toString() === user.id || user.role === 'admin') { %>
                                                            <a href="/claim-templates/<%= template._id %>/edit" class="btn btn-sm btn-primary">
                                                                <i class="fas fa-edit"></i> Edit
                                                            </a>
                                                            <form action="/claim-templates/<%= template._id %>?_method=DELETE" method="POST" class="d-inline delete-form">
                                                                <button type="submit" class="btn btn-sm btn-danger">
                                                                    <i class="fas fa-trash"></i> Delete
                                                                </button>
                                                            </form>
                                                        <% } %>
                                                        <% if ((user.role === 'admin' || user.role === 'manager') && 
                                                               template.requiresApproval && 
                                                               template.approvalStatus === 'pending') { %>
                                                            <form action="/claim-templates/<%= template._id %>/approve" method="POST" class="d-inline">
                                                                <button type="submit" class="btn btn-sm btn-success">
                                                                    <i class="fas fa-check"></i> Approve
                                                                </button>
                                                            </form>
                                                            <form action="/claim-templates/<%= template._id %>/reject" method="POST" class="d-inline">
                                                                <button type="submit" class="btn btn-sm btn-danger">
                                                                    <i class="fas fa-times"></i> Reject
                                                                </button>
                                                            </form>
                                                        <% } %>
                                                    </div>
                                                </div>
                                            </div>
                                        <% }); %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    <% } %>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Confirm delete
        const deleteForms = document.querySelectorAll('.delete-form');
        deleteForms.forEach(form => {
            form.addEventListener('submit', function(e) {
                if (!confirm('Are you sure you want to delete this template? This action cannot be undone.')) {
                    e.preventDefault();
                }
            });
        });
    });
</script>

<%- include('../partials/footer') %> 