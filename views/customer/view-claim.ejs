<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Claims - Budget Claims System</title>
    <link rel="stylesheet" href="/css/styles.css"><!-- Link to the external CSS file for styling -->
</head>
<body>
    <header>
        <!-- Budget logo and navigation -->
        <img src="/images/Budget_logo.svg" alt="Budget Logo" class="logo">
        <h1>View Claims</h1>
        <nav>
            <ul>
                <li><a href="/customer/dashboard">Dashboard</a></li>
                <li><a href="/customer/submit-claim">Submit Claim</a></li>
                <li><a href="/customer/view-claims">View Claims</a></li>
                <li><a href="/customer/settings">Settings</a></li>
                <li><a href="/customer/logout">Logout</a></li>
            </ul>
        </nav>
    </header>
    <main>
        <h2>Your Claims</h2>
        <ul>
            <% claims.forEach(claim => { %>
                <li>
                    <h3>MVA: <%= claim.mva %></h3>
                    <p>Description: <%= claim.description %></p>
                    <p>Status: <%= claim.status %></p>
                    <p>Date: <%= new Date(claim.date).toLocaleDateString() %></p>
                </li>
            <% }) %>
        </ul>
    </main>
</body>
</html>
